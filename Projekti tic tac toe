#include <iostream>
#include <cstdlib>
#include <ctime>
#include <vector>

using namespace std;

char board[3][3] = { {'1', '2', '3'},
                     {'4', '5', '6'},
                     {'7', '8', '9'} };

int player = 1;  
char mark;
int difficulty = 1;  


void displayBoard() {
    system("clear");  // Use "cls" for Windows, "clear" for Linux/Mac

    cout << "Tic-Tac-Toe Game\n";
    cout << "Player 1 (X)  -  AI (O)\n\n";

    for (int i = 0; i < 3; i++) {
        cout << " " << board[i][0] << " | " << board[i][1] << " | " << board[i][2] << " \n";
        if (i < 2) cout << "---|---|---\n";
    }
    cout << endl;
}